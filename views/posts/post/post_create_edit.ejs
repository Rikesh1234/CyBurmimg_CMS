                              <% customField.forEach(field => { %>
                                <% field.target_type.forEach((fields, index) => { %>
                                  <% const fieldName = field.field_name[index] %>
                                  <% const fieldValue = field.values && field.values[fieldName] ? field.values[fieldName] : '' %>
                            
                                  <% if (fields.slug == 'text') { %>
