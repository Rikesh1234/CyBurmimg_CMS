<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('../../layout/link') %>
    <title>CyBurning</title>
  </head>
  <body>
    <!-- SIDEBAR -->
    <%- include('../../layout/sidebar') %>
    <!-- SIDEBAR -->

    <!-- CONTENT -->
    <section id="content">
      <!-- NAVBAR -->
      <%- include('../../layout/header') %>
      <!-- NAVBAR -->

      <!-- MAIN -->
      <main>
        <div class="head-title">
          <div class="left">
            <h1>Team</h1>
            <ul class="breadcrumb">
              <li>
                <a href="/cms/dashboard">Dashboard</a>
              </li>
              <li><i class="bx bx-chevron-right"></i></li>
              <li>
                <a class="active" >Team</a>
              </li>
            </ul>
          </div>
          <a href="/cms/team/create" class="btn-create">
            <i class="fas fa-plus"></i>
            <span class="text">Create a Team</span>
          </a>
        </div>

        <div class="search-container">
          <form onsubmit="event.preventDefault();" role="search">
            <label for="search">Search for stuff</label>
            <input
              id="search"
              type="search"
              placeholder="Search..."
              autofocus
              required
            />
            <button type="submit">Go</button>
          </form>
        </div>

        <!-- Display posts dynamically -->
        <div class="row">
          <div class="card-container">
            <% teams.forEach(team => { %>
            <div class="col-md-6 col-lg-4">
              <div
                class="card author author-img-one position-relative overflow-hidden hover-img">
                <div class="position-relative" style="top: 28px; left: 22px;">
                  <img
                    src="<%= team.featured_image ? team.featured_image : '/images/icons/profile.png' %>"
                    alt="spike-img"
                    class="img-fluid rounded-circle position-absolute bottom-0 start-0 mb-n9 ms-9"
                    width="40"
                    height="40"
                    data-bs-toggle="tooltip"
                    data-bs-placement="top"
                    data-bs-title="<%= team.name %>"
                  />
                  <span class="card-author-name" style="position: relative; top: -6px; left: 49px; font-size: 17px; font-weight: 500;">Author Name</span>
                </div>
                <div class="card-body p-4">
                  <div class="category-published" style="justify-content: flex-end;">
                    <label class="wraper" for="something">
                      <span class="label-text">Published</span>
                      <div class="switch-wrap">
                        <input type="checkbox" checked id="<%= team._id %>" />
                        <div class="switch"></div>
                      </div>
                    </label>
                  </div>
               
                  <a
                    class="d-block my-2 text-dark link-primary"
                    
                    ><%= team.content %></a
                  >
                  <div class="d-flex align-items-center gap-4 icon-container">
                 
                    <div class="d-flex align-items-center gap-2">
                      <a href="/cms/team/edit/<%= team._id %>" class="text-black"
                        ><i class="fas fa-edit"></i
                      ></a>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                      <a
                        href="#"
                        class="text-black delete-team"
                        data-id="<%= team._id %>"
                        ><i class="fas fa-trash-alt"></i
                      ></a>
                    </div>
                    <div
                    class="d-flex align-items-center ms-auto default-btn active">
                    Set as Default
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% }) %>

          </div>
        </div>
        <div class="pagination-container">
          <ul class="pagination">
            <li>
              <a href="#">First</a>
            </li>
            <li>
              <a href="#">Prev</a>
            </li>
            <li>
              <a href="#">1</a>
            </li>
            <li class="active">
              <a href="#">2</a>
            </li>
            <li>
              <a href="#">3</a>
            </li>
            <li>
              <a href="#">Next</a>
            </li>
            <li>
              <a href="#">Last</a>
            </li>
          </ul>
        </div>
      </main>
      <!-- MAIN -->
    </section>
    <!-- CONTENT -->

    <%- include('../../layout/script') %>
    
      <script>

        document.addEventListener('DOMContentLoaded', () => {
          // Function to strip HTML tags from a string
          function stripHTMLTags(str) {
            let div = document.createElement('div');
            div.innerHTML = str;
            return div.textContent || div.innerText || '';
          }
        
          // Function to truncate the text with an ellipsis
          function truncateText(str, length) {
            return str.length > length ? str.substring(0, length) + '...' : str;
          }
        
          // Select all post content elements and apply truncation
          document.querySelectorAll('.post-content').forEach(element => {
            const rawContent = element.innerHTML;
            const plainTextContent = stripHTMLTags(rawContent);
            const truncatedContent = truncateText(plainTextContent, 100); // Adjust the length as needed
            element.innerText = truncatedContent;
          });
        
          // Handle delete button functionality
          const deleteButtons = document.querySelectorAll('.delete-team');
          deleteButtons.forEach(button => {
            button.addEventListener('click', function (event) {
              event.preventDefault(); // Prevent default link behavior
              const teamId = this.getAttribute('data-id'); // Get team ID
              // Trigger SweetAlert2 modal
              Swal.fire({
                title: 'Are you sure?',
                text: 'Do you really want to delete this team? This action cannot be undone.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Delete',
                cancelButtonText: 'Cancel'
              }).then((result) => {
                if (result.isConfirmed) {
                  // If confirmed, send POST request to delete the team
                  fetch(`/cms/team/delete/${teamId}`, {
                    method: 'POST',
                    headers: {
                      'Content-Type': 'application/json',
                    }
                  })
                  .then(response => {
                    if (response.ok) {
                      // Show success message and reload the page
                      Swal.fire('Deleted!', 'The team has been deleted.', 'success').then(() => {
                        location.reload(); // Reload the page after successful deletion
                      });
                    } else {
                      Swal.fire('Error!', 'There was an issue deleting the team.', 'error');
                    }
                  })
                  .catch(error => {
                    console.error('Error:', error);
                    Swal.fire('Error!', 'There was an issue deleting the team.', 'error');
                  });
                }
              });
            });
          });
        });
        
      </script>
  </body>
</html>
