<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <%- include('../layout/link') %>
    <title>CyBurning</title>
  </head>

  <body>
    <!-- SIDEBAR -->
    <%- include('../layout/sidebar') %>
    <!-- SIDEBAR -->

    <!-- CONTENT -->
    <section id="content">
      <!-- NAVBAR -->
      <%- include('../layout/header') %>
      <!-- NAVBAR -->

      <!-- MAIN -->
      <main>
        <div class="head-title">
          <div class="left">
            <h1>Setting</h1>
            <ul class="breadcrumb">
              <li>
                <a href="/cms/dashboard">Dashboard</a>
              </li>
              <li><i class="bx bx-chevron-right"></i></li>
             
              <li><i class="bx bx-chevron-right"></i></li>
              <li>
                <a class="active">Setting</a>
              </li>
            </ul>
          </div>
          <a href="/cms/setting" class="btn-create">
            <i class="fas fa-plus"></i>
            <span class="text">Create Field</span>
          </a>
        </div>

        <form action="#">
          <div class="form-container">


            <div class="setting-input">

              <div class="setting-container">
                <div class="input-field-container">
                <div class="form-box" style="width: 15%">
                  <div class="form-label">
                    <label for="input_type">Input Type</label>
                  </div>
                  <select
                    name="inputType"
                    class="select-input-type form-control"
                  >
                    <option>Text</option>
                    <option>Textarea</option>
                    <option>Repeator</option>
                  </select>
                </div>

                <div class="form-box" style="width: 50%">
                  <div class="form-label">
                    <label for="label_name">Label Name</label
                    ><span class="important">*</span>
                  </div>
                  <input
                    type="text"
                    class="form-control"
                    name="label_name"
                    id="label_name"
                  />
                </div>

                <div class="form-box" style="width: 50%">
                  <div class="form-label">
                    <label for="field_name">Field Name</label
                    ><span class="important">*</span>
                  </div>
                  <input
                    type="text"
                    class="form-control"
                    name="field_name"
                    id="field_name"
                  />
                </div>
              </div>
              <div class="repeater-container"></div>
              <div
                      class="btn-container-add"
                      style="display: flex; justify-content: flex-end"
                    >
                      <button
                        class="full-submit-button form-control"
                        style="width: 200px; margin-top: 25px; float: right"
                        id="input-repeator-btn"
                      >
                        <i class="fa-solid fa-plus"></i>Add Repeator
                      </button>
                    </div>
              </div>

              
            </div>
          </div>
        </form>
      </main>
      <!-- MAIN -->
    </section>
    <!-- CONTENT -->

    <%- include(../layout/script) %>
    

    <script>
      $(document).ready(function domReady() {
        $(".select-input-type").select2({
          placeholder: "Input Type",
        });
      });
    </script>

    <script>
      document.addEventListener("DOMContentLoaded", function () {

        let selectOption = document.querySelectorAll('.select-input-type');

        selectOption.forEach((currentValue, index, array)=>{
            currentValue.addEventListener('change',()=>{
                
            })
        })

        let itenaryRepetor = document.querySelector("#input-repeator-btn");

        itenaryRepetor.addEventListener("click", (event) => {
          event.preventDefault();
          const container = document.querySelector(".repeater-container");

          const newElement = document.createElement("div");
          newElement.className = "input-repeator-container";
          newElement.innerHTML = `
 <div class="input-field-container" style="">
                <div class="form-box" style="width: 15%">
                  <div class="form-label">
                    <label for="input_type">Input Type</label>
                  </div>
                  <select
                    name="inputType"
                    class="select-input-type form-control"
                  >
                    <option>Text</option>
                    <option>Textarea</option>
                    <option>Repeator</option>
                  </select>
                </div>

                <div class="form-box" style="width: 50%">
                  <div class="form-label">
                    <label for="label_name">Label Name</label
                    ><span class="important">*</span>
                  </div>
                  <input
                    type="text"
                    class="form-control"
                    name="label_name"
                    id="label_name"
                  />
                </div>

                <div class="form-box" style="width: 50%">
                  <div class="form-label">
                    <label for="field_name">Field Name</label
                    ><span class="important">*</span>
                  </div>
                  <input
                    type="text"
                    class="form-control"
                    name="field_name"
                    id="field_name"
                  />
                </div>
              </div>
  <div class="delete-btn" id="delete-btn" style="height:30px; width:30px;"><i class="fa-solid fa-minus"></i></div>
`;

          // Append the new element to the container
          container.appendChild(newElement);

          deleteButtons = document.querySelectorAll(".delete-btn");

          deleteButtons.forEach((currentValue, index, array) => {
            currentValue.addEventListener("click", () => {
              currentValue.parentElement.remove();
            });
          });
        });
      });
    </script>
  </body>
</html>
