    <!-- CONTENT -->
    <section id="content">
      <!-- NAVBAR -->
      <%- include('../layout/header') %>
      <!-- NAVBAR -->

      <!-- MAIN -->
      <main>
        <div class="head-title">
          <div class="left">
            <h1><%= page ? 'Edit' : 'Add' %> Page</h1>
            <ul class="breadcrumb">
              <li>
                <a href="/cms/dashboard">Dashboard</a>
              </li>
              <li><i class="bx bx-chevron-right"></i></li>
              <li>
                <a href="/cms/static-page">Page</a>
              </li>
              <li><i class="bx bx-chevron-right"></i></li>
              <li>
                <a class="active"><%= page ? 'Edit' : 'Add' %> Page</a>
              </li>
            </ul>
          </div>
          <a href="/cms/static-page" class="btn-create">
            <i class="fas fa-arrow-left"></i>
            <span class="text">Back</span>
          </a>
        </div>

        <!-- Form for Create/Edit -->
        <form action="<%= page ? '/cms/static-page/edit/' + page._id : '/cms/static-page/create' %>" method="POST" enctype="multipart/form-data">
          <div class="form-container">
            <div class="post-right-container col-md-7">
              <div class="form-box">
                <div class="form-label">
                  <label for="title">Title</label><span class="important">*</span>
                </div>
                <input
                  type="text"
                  class="form-control"
                  name="title"
                  id="title"
                  value="<%= page ? page.title : '' %>"
                  
                />
              </div>

              <div class="form-box">
                <div class="form-label">
                  <label for="slug">Slug</label><span class="important">*</span>
                </div>
                <input
                  type="text"
                  class="form-control"
                  name="slug"
                  id="slug"
                  value="<%= page ? page.slug : '' %>"
                  required
                />
              </div>

              <div class="form-box">
                <div class="form-label">
                  <label for="tag_line">Tag Line</label>
                </div>
                <input
                  type="text"
                  class="form-control"
                  name="tag_line"
                  value="<%= page ? page.tag_line : '' %>"
                />
              </div>
              <div class="form-box">
                <div class="form-label">
                  <label for="summary">Summary</label>
                </div>
                <textarea
                  type="text"
                  class="form-control"
                  name="summary"
                  rows="7"
                  cols="7"
                ><%= page ? page.summary : '' %></textarea>
              </div>
              <div class="form-box">
                <div class="form-label">
                  <label for="content">Content</label>
                </div>
                <textarea
                  type="text"
                  class="form-control"
                  name="content"
                  rows="7"
                  cols="7"
                  id="description"
                ><%= page ? page.content : '' %></textarea>
              </div>
            </div>

            <div class="post-left-container col-md-4 col-sm-12">
              <div class="form-box" style="margin-bottom: 15px">
                <div class="form-label">
                  <label for="Published">Published</label>
                  <div class="form-check form-switch" style="margin-top: 10px">
                    <label class="form-check-label" for="Status">Status</label>
                    <input
                      class="form-check-input"
                      type="checkbox"
                      id="status"
                      name="status"
                      <%= page && page.status === 'active' ? 'checked' : '' %>
                    />
                  </div>
                </div>
              </div>

              <div class="form-box">
                <div class="form-label">
                  <label for="Published_date">Published Date</label>
                </div>
                <input
                  type="datetime-local"
                  name="date"
                  id="date"
                  class="form-control"
                  placeholder="YYYY/MM/HH H:M:S"
                  value="<%= page && page.published_date ? page.published_date.toISOString().slice(0,16) : '' %>"
                />
              </div>

              <div class="form-box">
                <div class="form-label">
                  <label for="Published_date">Featured Image</label>
                </div>
                <div class="upload-container-one">
                  <input
                    id="upload-input-one"
                    type="file"
                    accept="image/*"
                    name="static_page_image"
                    hidden
                  />
                  <div id="image-container-one">
                    <img
                      src="<%= page && page.featured_image ? page.featured_image : '/images/upload.png' %>"
                      class="uploaded-image"
                    />
                  </div>
                  <label for="upload-input-one">Upload Image</label>
                </div>
              </div>
              <input type="submit" class="full-submit-button form-control" value="<%= page ? 'Update Page' : 'Create Page' %>" />
              <div class="button-box">
                <input type="submit" class="submit-button form-control" value="<%= page ? 'Update' : 'Submit' %>" />
                <input
                  type="button"
                  class="cancel-button form-control"
                  value="Cancel"
                  onclick="window.history.back();"
                />
              </div>
            </div>
          </div>
        </form>
      </main>
      <!-- MAIN -->
    </section>

