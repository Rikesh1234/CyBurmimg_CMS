    <script>
      $("#title").on("keyup", function () {
        var theTitle = this.value.toLowerCase().trim();
        var slugInput = $("#slug");
        var theSlug = theTitle
          .replace(/&/g, "-and-")
          .replace(/[^a-z0-9-]+/g, "-")
          .replace(/\-\-+/g, "-")
          .replace(/^-+|-+$/g, "");
        slugInput.val(theSlug);
      });

        const formErrors = <%- JSON.stringify(errors || []) %>;
        console.log('Form Errors:', formErrors); // Check if the errors are appearing correctly
      
        document.addEventListener('DOMContentLoaded', () => {
          // If there are errors, show the Swal alert
          if (formErrors.length > 0) {
            Swal.fire({
              icon: 'error',
              title: 'Validation Error',
              html: '<ul>' + formErrors.map(error => `<li>${error}</li>`).join('') + '</ul>',
              confirmButtonText: 'OK'
            });
          }
        });
      

    </script>
