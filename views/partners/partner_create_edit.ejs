    <!-- Boxicons -->
    <link
      href="https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css"
      rel="stylesheet"
    />
    <!-- My CSS -->
    <!-- <link rel="stylesheet" href="/css/style.css" /> -->

    <title>CyBurning</title>
  </head>

  <body>
    <!-- SIDEBAR -->
    <%- include('../layout/sidebar') %>
    <!-- SIDEBAR -->

    <!-- CONTENT -->
    <section id="content">
      <!-- NAVBAR -->
      <%- include('../layout/header') %>
      <!-- NAVBAR -->

      <!-- MAIN -->
      <main>
        <div class="head-title">
          <div class="left">
            <h1>Add Partner</h1>
            <ul class="breadcrumb">
              <li>
                <a href="dashboard.html">Dashboard</a>
              </li>
              <li><i class="bx bx-chevron-right"></i></li>
              <li>
                <a href="post_listing.html">Partner</a>
              </li>
              <li><i class="bx bx-chevron-right"></i></li>
              <li>
                <a class="active" href="#">Add Partner</a>
              </li>
            </ul>
          </div>
          <a href="#" class="btn-create">
            <i class="fas fa-arrow-left"></i>
            <span class="text">Back</span>
          </a>
        </div>

        <form action="#">
          <div class="form-container">
            <div class="post-right-container col-md-7 col-sm-12">
              <div class="form-box">
                <div class="form-label">
                  <label for="name">Name</label
                  ><span class="important">*</span>
                </div>
                <input type="text" class="form-control" name="name" />
              </div>

              <div class="form-box">
                <div class="form-label">
                  <label for="name">Url</label>
                </div>
                <input type="text" class="form-control" name="name" />
              </div>
            </div>

            <div class="post-left-container col-md-4 col-sm-12">
              <div class="form-box" style="margin-bottom: 15px">
                <div class="form-label">
                  <label for="Published">Published</label>
                  <div class="form-check form-switch" style="margin-top: 10px">
                    <label class="form-check-label" for="Status">Status</label>
                    <input
                      class="form-check-input"
                      type="checkbox"
                      id="status"
                    />
                  </div>
                </div>
              </div>

              <div class="form-box">
                <div class="form-label">
                  <label for="Published_date">Published Date</label>
                </div>
                <input
                  type="datetime-local"
                  name="date"
                  id="date"
                  class="form-control"
                  placeholder="YYYY/MM/HH H:M:S"
                />
              </div>

              <div class="form-box">
                <div class="form-label">
                  <label for="Published_date">Featued Image</label>
                </div>
                <div class="upload-container-one">
                  <input
                    id="upload-input-one"
                    type="file"
                    accept="image/*"
                    hidden
                  />
                  <div id="image-container-one">
                    <img
                      src="/images/upload.png"
                      class="uploaded-image"
                    />
                  </div>
                  <label for="upload-input-one">Upload Image</label>
                </div>
              </div>
              <input type="submit" class="full-submit-button form-control" />
              <input
                  type="button"
                  class="cancel-button form-control"
                  value="cancel"
                />
              <div class="button-box">
                <input type="submit" class="submit-button form-control" />
                <input
                  type="button"
                  class="cancel-button form-control"
                  value="cancel"
                />
              </div>
            </div>
          </div>
        </form>
      </main>
      <!-- MAIN -->
    </section>
    <!-- CONTENT -->

    <script src="/js/script.js?v=1.1"></script>
    <script src="/vendor/select2/select2.js"></script>
    <script src="/vendor/select2/select2.min.js"></script>
  </body>
</html>
